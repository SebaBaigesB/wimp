<%= simple_form_for([@restaurant, @meal]) do |f| %>
  <div class="container-fluid">
    <%= f.input :name %>
    <%= f.input :price, as: :float %>
    <%= f.input :description %>
    <%= f.input :course, collection: Meal::STATUSES, prompt: t('.which') %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.association :tags, as: :check_boxes %>
  </div>
  <%= f.submit class: "btn btn-primary"%>
<% end %>
