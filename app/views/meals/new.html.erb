<%= simple_form_for([@restaurant, @new_meal]) do |f| %>

<div class="container-fluid">
  <%= f.input :name, label: t('.name')%>
  <%= f.input :price, as: :float, label: t('.price') %>
  <%= f.input :description, label:  t('.desc')%>
  <%= f.input :course, collection: Meal::STATUSES.map{ |status| [t(".#{status.downcase}"), status]}, prompt: t('.which') %>
  <label class="w-100" id="upload-label">
    <div class="btn-review"><%= t('.pic')%></div>
    <span class="d-none">
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </span>
  </label>


<fieldset class="form-group check_boxes optional meal_tags">

<div class="funky">
  <div class="funky-warning">
    <div class="row">
      <div class="col-6">
        <legend class="ttle-tag text-center"><%= t('.aller')%></legend><input type="hidden" name="meal[tag_ids][]" value="">
        <% @allergy_tags.each do |tag| %>
        <div class="form-check"><input class="form-check-input check_boxes optional" type="checkbox" value="<%= tag.id %>" name="meal[tag_ids][]" id="meal_tag_ids_<%= tag.id %>"><label class="collection_check_boxes" for="meal_tag_ids_<%= tag.id %>"><%=tag.title%></label></div>
        <%  end %>
      </div>
      <div class="col-6">
        <legend class="ttle-tag text-center"><%= t('.diet')%></legend><input type="hidden" name="meal[tag_ids][]" value="">
        <% @category_tags.each do |tag| %>
        <div class="form-check"><input class="form-check-input check_boxes optional" type="checkbox" value="<%= tag.id %>" name="meal[tag_ids][]" id="meal_tag_ids_<%= tag.id %>"><label class="collection_check_boxes" for="meal_tag_ids_<%= tag.id %>"><%=tag.title%></label></div>
        <%  end %>
      </div>
     </div>
    </div>
  </div>
</div>
  </fieldset>
<%= f.submit class: "btn btn-review"%>
<% end %>
