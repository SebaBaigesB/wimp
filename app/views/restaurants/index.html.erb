<div class="restaurant">

  <div class="stick-me awsome col-2" id="map-button">
    <i class="fas fa-arrow-alt-circle-left "></i>
    <p>Map</p>
  </div>

  <ul class="list-inline tabs-underlined">
    <li>
      <a type="button" data-toggle="modal" data-target="#exampleModal" class="tab-underlined" id="food">Food Style</a>

      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Choose the food style you would like the eat</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>

    </li>
    <li>
      <a href="#" class="tab-underlined">Distance</a>
    </li>
    <li>
      <a href="tags" class="tab-underlined">Allergy</a>
    </li>
  </ul>




  <% @restaurants.each do |restaurant| %>
    <div class="rows d-flex">
      <div class="col-sm card-trip">
        <img src="https://images.unsplash.com/photo-1517142099008-c2eb9227b575?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1985&q=80"/>
        <div class="card-trip-infos">
          <div>
            <div class="name text-center">
              <%= restaurant.name %>
            </div>
            <div class="style text-center">
              <%= restaurant.food_style %>
            </div>
            <div class="address">
              <%= restaurant.address %>
            </div>
          </div>
          <h2 class="card-trip-pricing">150m</h2>
        </div>
      </div>
    </div>
    <br>

  <% end %>

  <div
    id="map"
    style="width: 100%; height: 1000px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  >
  </div>
</div>
