
<% @restaurants.each do |restaurant| %>
  <div class="rows d-flex">
    <div class="col-sm card-trip">
      <img src="https://images.unsplash.com/photo-1517142099008-c2eb9227b575?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1985&q=80"/>
      <div class="card-trip-infos">
        <div>
          <div class="name text-center">
            <%= restaurant.name %>
          </div>
          <div class="style text-center">
            <%= restaurant.food_style %>
          </div>
          <div class="address">
            <%= restaurant.address %>
          </div>
        </div>
        <h2 class="card-trip-pricing">150m</h2>
      </div>
    </div>
  </div>
  <br>

<% end %>

<div
  id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
>
</div>
