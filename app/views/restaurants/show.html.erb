<div class="banner" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.4),rgba(0,0,0,0.1)), url('<%= cl_image_path @restaurant.photo, height: 300, width: 400, crop: :fill %>');">
    <div class="container">
        <h1>
            <%= @restaurant.name %>
        </h1>
    </div>
</div>
<div class="restaurant">
    <div class="container">
        <div class="description">
            <%= link_to "X", restaurants_path, class: "btn btn-back"%>
            <h3>
                <%= t('.descr') %>
            </h3>
            <p>
                <%= @restaurant.story %>
            </p>
        </div>
        <% if current_user == @restaurant.user %>
        <div class="d-flex">
            <%= link_to t('.add'), new_restaurant_meal_path(@restaurant), class: "btn btn-primary" %>
        </div>
        <% end %>
        <div class="menu">
            <div class="starter p-2">
                <a data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                    <h1>
                        <%= t('.start') %> +</h1>
                </a>
                <div class="collapse" id="collapseExample">
                    <div class="cards ">
                        <% @meals.each do |meal| %>
                        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path @meal.photo, height: 300, width: 400, crop: :fill %>');">
                            <button type="button" class="btn btn-ghost" data-toggle="modal" data-target="#modal-<%= meal.id %>">
                                <%= meal.name %>
                            </button>
                            <div class="modal fade" id="modal-<%= meal.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">
                                                <%= meal.name %> -
                                                <%= meal.price %> €
                                            </h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <%= cl_image_tag meal.photo, height: 300, width: 300, crop: :fill %>
                                            <%= meal.description %>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn" data-dismiss="modal">Ok</button>
                                            <% if current_user == @restaurant.user %>
                                            <%= link_to t('.edit'), edit_restaurant_meal_path(@restaurant, meal), class: 'btn btn-primary' %>
                                            <%= link_to t('.remove'), root_path, class: "btn btn-danger mr-5",
                                            method: :delete,
                                            data: { confirm: t('.conf') } %>
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% end %>
                    </div>
                    <div class="main-course p-2">
                        <a data-toggle="collapse" href="#collapseExample2" role="button" aria-expanded="false" aria-controls="collapseExample2">
                            <h1>
                                <%= t('.main') %> +</h1>
                        </a>
                        <div class="collapse" id="collapseExample2">
                            <div class="cards ">
                                <% @restaurant.meals.each do |meal| %>
                                <% if meal.course == 'Main' %>
                                <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path @meal.photo, height: 300, width: 400, crop: :fill %>');">
                                    <button type="button" class="btn btn-ghost " data-toggle="modal" data-target="#modal-<%= meal.id %>">
                                        <%= meal.name %>
                                    </button>
                                    <div class="modal fade" id="modal-<%= meal.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel2" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">
                                                        <%= meal.name %> -
                                                        <%= meal.price %> €
                                                    </h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <%= cl_image_tag @meal.photo, height: 300, width: 400, crop: :fill %>
                                                    <%= meal.description %>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn" data-dismiss="modal">Ok</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% end %>
                                <% end %>
                            </div>
                            <div class="dessert p-2">
                                <a data-toggle="collapse" href="#collapseExample3" role="button" aria-expanded="false" aria-controls="collapseExample3">
                                    <h1>
                                        <%= t('.dess') %> +</h1>
                                </a>
                                <div class="collapse" id="collapseExample3">
                                    <div class="cards ">
                                        <% @restaurant.meals.each do |meal| %>
                                        <% if meal.course == 'Dessert' %>
                                        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path @meal.photo, height: 300, width: 400, crop: :fill %>');">
                                            <button type="button" class="btn btn-ghost" data-toggle="modal" data-target="#exampleModal3">
                                                <%= meal.name %>
                                            </button>
                                            <div class="modal fade" id="exampleModal3" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel3" aria-hidden="true">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">
                                                                <%= meal.name %> -
                                                                <%= meal.price %> €
                                                            </h5>
                                                        </div>
                                                        <!-- <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button> -->
                                                        <div class="modal-body">
                                                            <%= cl_image_tag @meal.photo, height: 300, width: 400, crop: :fill %>
                                                            <%= meal.description %>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <% tag.each do |tag| %>
                                                            <%= tag.title %>
                                                            <% end %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% end %>
                                        <% end %>
                                        <div id="map2" style="width: 100%;
         height: 150px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
                                        </div>
                                        <br>
                                        <%= link_to t('.review'), new_restaurant_review_path(@restaurant.id), class: "btn btn-review" %>
                                        <ul>
                                            <% @restaurant.reviews.each do |review| %>
                                            <li>
                                                <%= review.user.nickname %>
                                            </li>
                                            <li>
                                                <%= review.content %>
                                            </li>
                                            <% end %>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="map2" style="width: 100%;
    height: 150px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
                        </div>
                        <i class="fas fa-crosshairs"></i>
                        <br>
                        <%= link_to t('.review'), new_restaurant_review_path(@restaurant.id), class: "btn btn-review" %>
                        <ul>
                            <% @restaurant.reviews.each do |review| %>
                            <li>
                                <%= review.user.nickname %>
                            </li>
                            <li>
                                <%= review.content %>
                            </li>
                            <% end %>
                        </ul>
                    </div>
                    <% if current_user == @restaurant.user %>
                    <div class="d-flex">
                        <%= link_to t('.del'), owners_restaurant_path(@restaurant), class: "btn btn-primary", method: :delete,
                                        data: { confirm: t('.rem') } %>
                    </div>
                    <% end %>
